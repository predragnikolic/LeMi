{
  "compilerOptions": {
    "plugins": [{"transform": "./libs/compiler/main.ts"} ],
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "strict": true,
    "outDir": "dist",
    "baseUrl": ".",
  },
  "exclude": [
    "libs",
    "dist"
  ]
}